<div class="form-edit-profil mx-auto">
	<h2 class="text-dark">Editer mon profil</h2>

	{{ form_start(form) }}
	<div class="row mt-4">
		<div class="col">
			{{ form_row(form.username) }}
		</div>
		<div class="col">
			{{ form_row(form.image) }}
		</div>
	</div>
	<div class="row mt-4">
		<div class="col">
			{{ form_row(form.bio) }}
		</div>
	</div>
	<div class="row mt-4">
		<div class="col">
			{{ form_row(form.localisation) }}
		</div>
	</div>
	<br>
	{{ form_row(form.submit) }}
	{{ form_end(form) }}

	<br>
	<a href="{{ path('app_account_type', {'username':user.username}) }}" class="text-dark">
		<i class="fas fa-caret-right me-1"></i>
		Modifier les informations du compte
	</a>
</div>
