<div class="form-edit-profil mx-auto">
	<h2 class="text-dark">Editer mon profil</h2>
	{{ form_start(form) }}
	<div class="row mt-4">
		<div class="col">
			{{ form_row(form.username) }}
		</div>
		<div class="col">
			{{ form_row(form.image) }}
		</div>
	</div>
	<div class="row mt-4">
		<div class="col">
			{{ form_row(form.bio) }}
		</div>
	</div>
	<div class="row mt-4">
		<div class="col">
			{{ form_row(form.localisation) }}
		</div>
	</div>
	<br>
	{{ form_row(form.submit) }}
	{{ form_end(form) }}
</div>
