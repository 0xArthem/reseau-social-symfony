{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!
{% endblock %}

{% block body %}
	<div>
		<h1>Mon Profil</h1>
		<h2>
			pseudo : @{{ app.user.username }}
		</h2>
		<p>
			{{ app.user.bio }}
		</p>
		<p>
			{{ app.user.localisation }}
		</p>
		<section>
			{% if app.user.isPublic %}
				<p>compte public</p>
			{% else %}
				<p>compte priv√©</p>
			{% endif %}
		</section>

		<p>Image de profil</p>
		<img src="/assets/images/profil/{{ app.user.image }}" alt="" width="100px">

		<br>

		<a href="{{ path('app_account_edit_profil') }}">
			Modifier mon profil
		</a>
	</div>
{% endblock %}
