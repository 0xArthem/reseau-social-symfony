{% extends 'base.html.twig' %}

{% block title %}
	Accueil - Recherche
{% endblock %}

{% block body %}
	<div class="div-global">
		<h1 class="text-center text-dark pt-5">
			Recherche
		</h1>

		<!-- include de l'affichage de la section de recherche des posts -->
		{% include "include/formPost.html.twig" %}

		<!-- affichage des posts recherchés -->
		<section class="posts-TL">
			<h4 class="text-dark mb-5">
				<i class="fas fa-caret-right me-1"></i>
				Résultats dans la catégorie
				{{ postTag.name }}
			</h4>
			<!-- affichage des posts -->
			{% include "include/forPostHome.html.twig" %}
		</section>

		<!-- pagination avec KnpPaginatorBundle -->
		{% include "include/paginationPost.html.twig" %}
	</div>
{% endblock %}
