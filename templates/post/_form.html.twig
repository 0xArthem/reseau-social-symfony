<div class="form-post">

	<div class="d-flex justify-content-center">
		{% for flashMessage in app.session.flashbag.get('error') %}
			<div class="alert alert-danger alert-dismissible fade show bg-light text-danger shadow mb-5" role="alert">
				<i class="fas fa-circle-exclamation me-2"></i>
				{{ flashMessage }}
			</div>
		{% endfor %}
	</div>

	{{ form_start(form) }}
	<div class="row">
		<div class="col">
			{{ form_row(form.title) }}
		</div>
		<div class="col">
			{{ form_row(form.image) }}
		</div>
	</div>
	<div class="row mt-4">
		{{ form_row(form.content) }}
	</div>
	<div class="row mt-4">
		{{ form_row(form.link) }}
	</div>
	<div class="row mt-4">
		{{ form_row(form.isPinned) }}
	</div>
	<div class="row mt-4">
		{{ form_row(form.submit) }}
	</div>
	<br>
	{{ form_end(form) }}</div>
