{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<div class="div-global">
		<h1 class="text-center pt-5 titre-home">
			Lorem ipsum
		</h1>

		<!-- include de l'affichage de la section de recherche des posts -->
		{% include "include/formPost.html.twig" %}

		{% if page == 1 %}
			<div
				class="div-pills">
				<!-- Pills navs -->
				<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
					<li class="nav-item" role="presentation">
						<a class="nav-link nav-link-pills active shadow" id="ex3-tab-1" data-mdb-toggle="pill" href="#ex3-pills-1" role="tab" aria-controls="ex3-pills-1" aria-selected="true">
							Nouveautés
						</a>
					</li>
					<li class="nav-item" role="presentation">
						<a class="nav-link nav-link-pills shadow" id="ex3-tab-2" data-mdb-toggle="pill" href="#ex3-pills-2" role="tab" aria-controls="ex3-pills-2" aria-selected="false">
							En tendance
						</a>
					</li>
				</ul>
				<!-- Pills navs -->
			</div>
		{% endif %}

		<!-- Pills content -->
		<div class="tab-content" id="ex2-content">
			<div
				class="tab-pane fade show active" id="ex3-pills-1" role="tabpanel" aria-labelledby="ex3-tab-1">
				<!-- affichage de tous les posts de tous les utilisateurs par ordre décroissant -->

				<section {% if page == 1 %} class="posts-TL-page" {% else %} class="posts-TL" {% endif %}>
					<h4 class="text-dark mb-5">
						<i class="fas fa-caret-right me-1"></i>
						Nouveautés
					</h4>
					<!-- affichage des posts -->
					{% include "include/forPostHome.html.twig" %}

					<br>
					<!-- pagination avec KnpPaginatorBundle -->
					{% include "include/paginationPost.html.twig" %}
				</section>
			</div>
			<div class="tab-pane fade" id="ex3-pills-2" role="tabpanel" aria-labelledby="ex3-tab-2">
				<section class="posts-TL-page">
					<h4 class="text-dark mb-5">
						<i class="fas fa-caret-right me-1"></i>
						Tendance
					</h4>
					<!-- include de l'affichage des posts les plus likés -->
					{% include "include/postLiked.html.twig" %}
				</section>
			</div>
		</div>
		<!-- Pills content -->

		<!-- section blog - ecom -->
		<section id="actualites">
			{% include "include/section-blog-ecom-home.html.twig" %}
		</section>
	</div>
{% endblock %}
