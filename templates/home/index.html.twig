{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div>
		<h1>Mon r√©seau social</h1>

		{% if app.user %}
			<a href="{{ path('app_account', {'username': app.user.username}) }}" type="button">
				Voir mon profil
			</a>
		{% else %}
			<a href="{{ path('app_login') }}">Se connecter</a>
		{% endif %}


		<hr>

		<section>
			{% for allUser in allUsers %}
				<a href="{{ path('app_account', {'username': allUser.username}) }}">
					{{ allUser.username }}
				</a>
			{% endfor %}
		</section>

	</div>
{% endblock %}
