{% extends 'base.html.twig' %}

{% block title %}Recherche produits
{% endblock %}

{% block body %}
	<div>
		<h1>Recherche produits</h1>
		<form method="get" action="{{ path('search_products') }}">
			<label for="search">Rechercher :
			</label>
			<input type="text" id="search" name="search" placeholder="Entrez un mot-clé">
			<button type="submit">Rechercher</button>
		</form>

		{% if products is empty %}
			<p>Désolé. Aucun de nos produits ne correspond à ce mot-clé.</p>
		{% else %}
			<ul>
				{% for product in products %}
					{% include "include/product.html.twig" %}
				{% endfor %}
			</ul>
		{% endif %}
	</div>
{% endblock %}
