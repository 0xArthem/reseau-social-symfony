<div class="col mb-4">
	{% if post.image %}
		<div class="card post-card-body-img-responsive-connected">
			<img src="{{ asset('assets/images/post/' ~ post.image) }}" class="card-img-top post-card-img shadow" alt="{{ post.title }}"/>
			<div class="card-body post-card-body-img">
				<div class="mb-2 div-btn-post-compteur">
					<button class="btn btn-light btn-post-compteur btn-post-compteur-responsive-none shadow">
						<i class="far fa-clock me-1"></i>
						{{ post.createdAt|date('d ') ~ months[post.createdAt|date('n')-1] ~ post.createdAt|date(' Y') }}
					</button>
					<button class="btn btn-light btn-post-user shadow">
						{{ post.user }}
					</button>
				</div>

				{% if post.title %}
					<h5 class="card-title" title="{{ post.title|striptags }}">
						{{ post.title|striptags|length > 35 ? post.title|striptags|slice(0, 35) ~ ' ...' : post.title|striptags }}
					</h5>
				{% else %}
					<div class="mt-3"></div>
				{% endif %}

				<p class="card-text card-post-content-responsive">
					{{ post.content|striptags|length > 140 ? post.content|striptags|slice(0, 140) ~ ' ...' : post.content|striptags }}
				</p>
			</div>
		</div>
	{% else %}
		<div class="card post-card-body-responsive-connected">
			<div class="card-body post-card-body">
				<div class="mb-2 div-btn-post-compteur">
					<button class="btn btn-light btn-post-compteur btn-post-compteur-responsive-none shadow">
						<i class="far fa-clock me-1"></i>
						{{ post.createdAt|date('d ') ~ months[post.createdAt|date('n')-1] ~ post.createdAt|date(' Y') }}
					</button>
					<button class="btn btn-light btn-post-user shadow">
						{{ post.user }}
					</button>
				</div>
				{% if post.title %}
					<h5 class="card-title mt-1" title="{{ post.title|striptags }}">
						{{ post.title|striptags|length > 35 ? post.title|striptags|slice(0, 35) ~ ' ...' : post.title|striptags }}
					</h5>

					<p class="card-text card-post-content-responsive mt-3">
						{{ post.content|striptags|length > 700 ? post.content|striptags|slice(0, 700) ~ ' ...' : post.content|striptags }}
					</p>
				{% else %}
					<p class="card-text card-post-content-responsive">
						{{ post.content|striptags|length > 700 ? post.content|striptags|slice(0, 700) ~ ' ...' : post.content|striptags }}
					</p>
				{% endif %}
			</div>
		</div>
	{% endif %}
</div>
